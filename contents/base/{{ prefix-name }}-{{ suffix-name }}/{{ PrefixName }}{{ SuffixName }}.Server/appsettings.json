{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database={{ prefix-name }}-{{ suffix-name }}-db;Username=postgres;Password=postgres"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Grpc": {
        "Url": "http://0.0.0.0:5030",
        "Protocols": "Http2"
      },
      "Http": {
        "Url": "http://0.0.0.0:5031",
        "Protocols": "Http1"
      }
    }
  },
  "Application": {
    "Name": "{{ prefix-name }}-{{ suffix-name }}",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "Database": {
    "EnableMigrations": "true",
    "ConnectionPoolSize": "10",
    "CommandTimeout": "30"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "{{ PrefixName }}{{ SuffixName }}.Core": "Information",
        "{{ PrefixName }}{{ SuffixName }}.Persistence": "Information",
        "{{ PrefixName }}{{ SuffixName }}.Server.Grpc": "Information",
        "{{ PrefixName }}{{ SuffixName }}.Server.HealthChecks": "Information",
        "{{ PrefixName }}{{ SuffixName }}.Server.Services.MetricsService": "Warning",
        "{{ PrefixName }}{{ SuffixName }}.Server.Interceptors": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
        "Microsoft.Extensions.Diagnostics.HealthChecks": "Information",
        "OpenTelemetry": "Warning",
        "System": "Error",
        "Grpc": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [
      "FromLogContext", 
      "WithMachineName", 
      "WithThreadId", 
      "WithCorrelationId", 
      "WithEnvironmentName",
      "WithProperty"
    ],
    "Properties": {
      "Application": "{{ prefix-name }}-{{ suffix-name }}",
      "Environment": "Production",
      "Version": "1.0.0"
    }
  },
  "Authentication": {
    "Jwt": {
      "SecretKey": "your-256-bit-secret-key-here-for-jwt-tokens-make-it-very-long"
    }
  }
}